<div id="main-container" class="container">
      <div class="row">
        <div id="navbar" class="col-md-6">
          <h1>Update Album Details</h1>
          <p><%= link_to "Back", albums_path %><p>
        </div>
      </div>
</div>

<%= form_with(model: @album, local: true) do |form| %>
  <% if @album.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@album.errors.count, "error") %> prohibited
        this album from being saved:
      </h2>
      <ul>
        <% @album.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :title, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :artist, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= form.text_field :artist, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :year_released, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= form.text_field :year_released, class: "form-control" %>
    </div>
  </div>
  
  <div class="col-md-4">
    <button class="btn btn-primary">
      <%= form.submit "Update", class: "btn btn-default btn-primary" %>
    </button>
  </div>
  </div>
<% end %>